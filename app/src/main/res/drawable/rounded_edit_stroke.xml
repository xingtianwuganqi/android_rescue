<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- 设置填充颜色为灰色 -->
    <solid android:color="#FFFFFF"/> <!-- 你可以根据需要调整颜色值 -->

    <!-- 设置圆角半径 -->
    <corners android:radius="10dp"/> <!-- 调整圆角半径 -->

    <!-- 可选：设置边框 -->
    <stroke
        android:width="1dp"
        android:color="#EEEEEE"/> <!-- 边框颜色和宽度 -->
</shape>