<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".show.fragment.ShowFragment">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/head_img"
        android:scaleType="centerCrop"
        app:riv_corner_radius="20dp"
        app:riv_mutate_background="true"
        app:riv_tile_mode="repeat"
        app:riv_oval="true"
        android:layout_height="40dp"
        android:layout_width="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/nick_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="@dimen/content_font"
        android:textColor="@color/color_title"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/head_img"
        app:layout_constraintRight_toLeftOf="@id/more_btn"
        app:layout_constraintTop_toTopOf="@id/head_img"
        />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="@dimen/address_font"
        android:textColor="@color/color_desc"
        app:layout_constraintTop_toBottomOf="@id/nick_name"
        app:layout_constraintLeft_toRightOf="@id/head_img"
        app:layout_constraintRight_toLeftOf="@id/more_btn"
        app:layout_constraintBottom_toBottomOf="@id/head_img"
        android:layout_marginStart="10dp"
        />

    <ImageButton
        android:id="@+id/more_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_more"
        android:background="#00000000"
        app:layout_constraintLeft_toRightOf="@id/nick_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/nick_name"
        app:layout_constraintBottom_toBottomOf="@id/nick_name"
        android:layout_marginEnd="10dp"
        android:contentDescription="@null" />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:id="@+id/gambit_button"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/head_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:icon="@drawable/icon_show_gb"
        app:iconTint="@null"
        app:cornerRadius="10dp"
        android:textColor="@color/color_system"
        android:visibility="gone"
        android:backgroundTint="@color/color_defIcon"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toBottomOf="@id/gambit_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        />

    <com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator
        android:id="@+id/viewpager_pager_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotColor="@color/color_desc"
        app:selectedDotColor="@color/color_system"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/viewPager2"
        android:layout_marginBottom="10dp"
    />

    <!-- 宽度设置为0dp，表示使用约束 -->
    <!-- 高度设置为0dp -->

    <com.webtoonscorp.android.readmore.ReadMoreTextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewPager2"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/color_content"
        android:textSize="@dimen/content_font"
        app:readMoreMaxLines="2"
        app:readMoreOverflow="ellipsis"
        app:readMoreText="@string/read_all"
        app:readMoreTextColor="@color/color_system"
        app:readMoreToggleArea="all"
        app:readLessText="@string/read_close"
        app:readLessTextColor="@color/color_system"
        />

    <TextView
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/address_font"
        android:textColor="@color/color_desc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="6dp"
        />

    <LinearLayout
        android:id="@+id/linear_content"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/comment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/like_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/icon_zan_un"
            app:iconTint="@null"
            app:iconGravity="textStart"
            app:iconPadding="3dp"
            android:text="@string/like_action"
            android:textSize="@dimen/address_font"
            android:textColor="@color/color_node"
            android:backgroundTint="@android:color/transparent"
            />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/collect_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/icon_collection_un"
            app:iconTint="@null"
            app:iconGravity="textStart"
            app:iconPadding="3dp"
            android:text="@string/collection_action"
            android:textColor="@color/color_node"
            android:textSize="@dimen/address_font"
            android:backgroundTint="@android:color/transparent"
            />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/comment_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/icon_sh_commen"
            app:iconTint="@null"
            app:iconGravity="textStart"
            app:iconPadding="3dp"
            android:text="@string/comment_action"
            android:textColor="@color/color_node"
            android:textSize="@dimen/address_font"
            android:backgroundTint="@android:color/transparent"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:background="#EEEEEE"/>

</androidx.constraintlayout.widget.ConstraintLayout>